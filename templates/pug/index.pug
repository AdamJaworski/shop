- var style_path = "/css/style_index.css";
- var style_common_path = "/css/style_common.css";

doctype html
html
  head
    title Shop main page
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    link(rel="stylesheet" href=style_path)
    script(src="https://kit.fontawesome.com/1e1f3838ce.js" crossorigin="anonymous")
    link(rel="stylesheet" href=style_common_path)
  body
    div(class='site-body p-5')
      div(class='top-bar d-flex justify-content-between align-items-center')
        div(class='shop-name') Shop Name
        form(class='search-form d-flex')
          input(type='text' class='form-control' placeholder='Search...')
          button(type='submit' class='btn btn-outline-secondary')
            i(class='fas fa-search')
        button(class='cart btn btn-outline-primary')
          i(class='fas fa-shopping-cart')

      div(class='categories-bar d-flex justify-content-between align-items-center mt-2')
        a(href='#') Category 1
        a(href='#') Category 2
        a(href='#') Category 3
        a(href='#') Category 4
        a(href='#') Category 5

      div(class='main-banner mt-2')
        div(id='carouselExampleIndicators' class='carousel slide' data-bs-ride='carousel')
          ol(class='carousel-indicators')
            li(data-bs-target='#carouselExampleIndicators' data-bs-slide-to='0' class='active')
            li(data-bs-target='#carouselExampleIndicators' data-bs-slide-to='1')
          div(class='carousel-inner')
            div(class='carousel-item active')
              img(src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT0r1wvfjOco-FUqmuvsb9O3NirAKc9ayzAAWkLPUBTVnzECpe32bAEGRTe_phz16lFgDc&usqp=CAU' class='d-block w-100' alt='First slide')
            div(class='carousel-item')
              img(src='/templates/banners/shop-banner.jpg' class='d-block w-100' alt='Second slide')
          a(class='carousel-control-prev' href='#carouselExampleIndicators' role='button' data-bs-slide='prev')
            span(class='carousel-control-prev-icon' aria-hidden='true')
            span(class='visually-hidden') Previous
          a(class='carousel-control-next' href='#carouselExampleIndicators' role='button' data-bs-slide='next')
            span(class='carousel-control-next-icon' aria-hidden='true')
            span(class='visually-hidden') Next
      
      div(class='main-part mt-4')
        div(class='row')
          div(class='col-lg-2 d-none d-lg-block')
            div(class='filters')
              h5 Filters
              ul
                li Filter 1
                li Filter 2
                li Filter 3
                li Filter 4
          div(class='col-lg-10 col-12')
            div(class='d-flex justify-content-end mb-3')
              select(class='form-select w-auto')
                option(value='') Sort by
                option(value='price-asc') Price: Low to High
                option(value='price-desc') Price: High to Low
                option(value='rating') Rating
                option(value='newest') Newest
            div(class='row')
              div(class='col-lg-3 col-md-6 mb-4')
                div(class='product-card')
                  img(src='https://via.placeholder.com/150' class='img-fluid' alt='Product 1')
                  h6 Product 1
                  p $10.00
              div(class='col-lg-3 col-md-6 mb-4')
                div(class='product-card')
                  img(src='https://via.placeholder.com/150' class='img-fluid' alt='Product 2')
                  h6 Product 2
                  p $20.00
              div(class='col-lg-3 col-md-6 mb-4')
                div(class='product-card')
                  img(src='https://via.placeholder.com/150' class='img-fluid' alt='Product 3')
                  h6 Product 3
                  p $30.00
              div(class='col-lg-3 col-md-6 mb-4')
                div(class='product-card')
                  img(src='https://via.placeholder.com/150' class='img-fluid' alt='Product 4')
                  h6 Product 4
                  p $40.00
      footer(class='footer mt-5')
        div(class='container')
          div(class='row')
            div(class='col-md-3')
              h5 Links
              ul(class='list-unstyled')
                li
                  a(href='#') Privacy Policy
                li
                  a(href='#') Regulamin
                li
                  a(href='#') Zwroty i Reklamacje
            div(class='col-md-3')
              h5 Support
              ul(class='list-unstyled')
                li
                  a(href='#') Częste Pytania
                li
                  a(href='#') Zarządzaj Ciasteczkami
                li
                  a(href='#') Dostawa i Płatność
            div(class='col-md-3')
              h5 Company
              ul(class='list-unstyled')
                li
                  a(href='#') About Us
                li
                  a(href='#') Careers
                li
                  a(href='#') Contact Us
            div(class='col-md-3')
              h5 Follow Us
              ul(class='list-unstyled')
                li
                  a(href='#') Facebook
                li
                  a(href='#') Twitter
                li
                  a(href='#') Instagram
